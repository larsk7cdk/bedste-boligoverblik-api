{
    "AllowedHosts": "*",
    "AzureAdB2C": {
        "Instance": "https://bedsteboligoverblik.b2clogin.com",
        "ClientId": "a45506e7-76ef-4155-b019-acffb466a945",
        "Domain": "bedsteboligoverblik.onmicrosoft.com",
        // "SignedOutCallbackPath": "/signout/B2C_1_susi_reset_v2",
        "SignUpSignInPolicyId": "B2C_1_SignUpIn"
        //"CallbackPath": "/signin/B2C_1_sign_up_in"  // defaults to /signin-oidc
    },
    "Serilog": {
        "Using": [ "Serilog.Exceptions", "Serilog", "Serilog.Sinks.Console" ],
        "MinimumLevel": {
            "Default": "Information",
            "Override": {
                "System": "Information",
                "Microsoft": "Information"
            }
        },
        "WriteTo": [
            {
                "Name": "Async",
                "Args": {
                    "configure": [
                        {
                            "Name": "Console",
                            "Args": {
                                "restrictedToMinimumLevel": "Information"
                            }
                        }
                    ]
                }
            },
            {
                "Name": "Async",
                "Args": {
                    "configure": [
                        {
                            "Name": "File",
                            "Args": {
                                "shared": true,
                                "path": "d:\\home\\LogFiles\\Application\\app-.log",
                                "rollingInterval": "Day",
                                "outputTemplate": "{Timestamp:o} [{Level:u3}] ({MachineName}/{CorrelationId}) {Message}{NewLine}{Exception}"
                            }
                        }
                    ],
                    "Enrich": [ "FromLogContext", "WithExceptionDetails" ]
                }
            }
        ]
    }
}