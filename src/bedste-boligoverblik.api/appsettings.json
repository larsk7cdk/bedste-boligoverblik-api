{
    "AllowedHosts": "*",
    "Serilog": {
        "Using": ["Serilog.Exceptions", "Serilog", "Serilog.Sinks.Console"],
        "MinimumLevel": {
            "Default": "Information",
            "Override": {
                "System": "Information",
                "Microsoft": "Information"
            }
        },
        "WriteTo": [
            {
                "Name": "Async",
                "Args": {
                    "configure": [
                        {
                            "Name": "Console",
                            "Args": {
                                "restrictedToMinimumLevel": "Information"
                            }
                        }
                    ]
                }
            },
            {
                "Name": "Async",
                "Args": {
                    "configure": [
                        {
                            "Name": "File",
                            "Args": {
                                "shared": true,
                                "path": "c:\\home\\LogFiles\\Application\\app-.log",
                                "rollingInterval": "Day",
                                "outputTemplate":
                                    "{Timestamp:o} [{Level:u3}] ({MachineName}/{CorrelationId}) {Message}{NewLine}{Exception}"
                            }
                        }
                    ],
                    "Enrich": ["FromLogContext", "WithExceptionDetails"]
                }
            }
        ]
    }
}